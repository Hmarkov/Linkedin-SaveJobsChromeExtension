{
    "name": "Linkedin Jobs",
    "version": "0.1.0",
    "description": "Linkedin Application",
    "permissions": ["storage", "tabs","clipboardRead","clipboardWrite"],
    "host_permissions": ["https://*.linkedin.com/*"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://*.linkedin.com/*"],
        "js": ["contentscript.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "assets/Save.png",
          "assets/New Tab.png",
          "assets/Delete.png"
        ],
        "matches": ["https://*.linkedin.com/*"]
      }
    ],
    "action": {
      "default_icon": {
        "16": "icons/linked16.png",
        "24": "icons/linked24.png",
        "32": "icons/linked32.png",
        "48": "icons/linked48.png",
        "64": "icons/linked64.png",
        "128": "icons/linked128.png"
      },
      "default_title": "Linkedin Applications",
      "default_popup": "popup.html"
    },
    "manifest_version": 3
  }